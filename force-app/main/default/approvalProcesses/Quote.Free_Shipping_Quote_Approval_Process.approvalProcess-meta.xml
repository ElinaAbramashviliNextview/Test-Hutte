<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>true</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>DiscountReason__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <assignedApprover>
            <approver>
                <name>elina.abramashvili@silentlab.com.qa</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <label>Approval</label>
        <name>Approval</name>
    </approvalStep>
    <emailTemplate>unfiled$public/Free_Shipping_Verification_Request</emailTemplate>
    <enableMobileDeviceAccess>false</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>Quote.IsApproved__c</field>
            <operation>notEqual</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Quote.Status</field>
            <operation>notEqual</operation>
            <value>Approved</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Check_Is_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Quote_Status_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>QuoteApprove</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>QuoteReject</name>
            <type>Alert</type>
        </action>
        <action>
            <name>QuoteStatusNew</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UncheckIsApproved</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>true</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Free_Shipping_Notification_And_Verification_Request</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Quote_Status_Update</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Free Shipping Quote Approval Process</label>
    <nextAutomatedApprover>
        <useApproverFieldOfRecordOwner>false</useApproverFieldOfRecordOwner>
        <userHierarchyField>Manager</userHierarchyField>
    </nextAutomatedApprover>
    <processOrder>2</processOrder>
    <recallActions>
        <action>
            <name>CheckIsRecall</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>QuoteStatusNew</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UncheckIsApproved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>UncheckNeedApprove</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
