<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_Won_Opp_must_have_synced_Quote</fullName>
    <active>false</active>
    <errorConditionFormula>AND(
ISPICKVAL(StageName, &quot;Closed Won&quot;),
SyncedQuoteId == null 
)</errorConditionFormula>
    <errorMessage>For &apos;Closed Won&apos; Stage - related Quote must be synced with Opportunity</errorMessage>
</ValidationRule>
